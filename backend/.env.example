# Backend Environment Variables
# Copy this file to .env and fill in your values

# MongoDB Connection String (MongoDB Atlas)
MONGO_URL=mongodb+srv://username:password@cluster.xxxxx.mongodb.net/josefirmino?retryWrites=true&w=majority

# Database Name
DB_NAME=josefirmino

# JWT Secret (generate a random secure string)
JWT_SECRET=your-super-secret-jwt-key-here

# CORS Origins (comma-separated list of allowed origins)
CORS_ORIGINS=https://your-site.netlify.app,http://localhost:3000

# Resend API Key (for email notifications - optional)
RESEND_API_KEY=re_xxxxxxxxxxxxxxxxxxxxxxxx

# Alert Email (recipient for system alerts - optional)
ALERT_EMAIL=alerts@yourcompany.com
